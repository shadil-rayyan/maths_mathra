<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="@color/background">

    <!-- Title TextView -->
    <TextView
        android:id="@+id/title_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Rotate Your Phone"
        android:textSize="22sp"
        android:textStyle="bold"
        android:textColor="@color/primaryText"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="20dp" />

    <!-- Angle Question TextView -->
    <TextView
        android:id="@+id/angle_question"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Turn your phone 90 degrees"
        android:textColor="@color/primaryText"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        app:layout_constraintTop_toBottomOf="@id/title_text"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:focusableInTouchMode="true"
        android:focusable="true"
        android:layout_marginTop="20dp" />

    <!-- ImageView (Rotate Phone Animation) -->
    <ImageView
        android:id="@+id/animated_view"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:src="@drawable/rotateyourphone"
        app:layout_constraintTop_toBottomOf="@id/angle_question"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="30dp" />

    <!-- Rotation Angle Text -->
    <TextView
        android:id="@+id/rotation_angle_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Rotation Angle: 0Â°"
        android:textColor="@color/primaryText"
        android:textSize="18sp"
        app:layout_constraintTop_toBottomOf="@id/animated_view"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="20dp" />

</androidx.constraintlayout.widget.ConstraintLayout>
