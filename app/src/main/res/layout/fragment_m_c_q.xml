<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    tools:context=".ui.MCQFragment"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        android:padding="20dp">

        <!-- Instruction Text -->
        <com.google.android.material.textview.MaterialTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="What is the value of:"
            android:textColor="@color/primaryText"
            android:textSize="24sp"
            android:layout_margin="10dp"
            />

        <!-- Math Question Text -->
        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/question_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="2 + 2 = ?"
            android:textColor="@color/primaryText"
            android:textAlignment="center"
            android:layout_margin="10dp"
            android:textSize="48sp"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:clickable="true"
            android:contentDescription="Question. What is 2 plus 2? Double tap to repeat. There are four options below." />

        <!-- First Row of Options -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="50dp"
            android:gravity="center">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/option_a"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:textSize="24sp"
                android:text="100"
                android:textColor="@color/primaryText"
                android:backgroundTint="@color/button"
                android:contentDescription=" option A.100. Double tap to select." />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/option_b"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_marginStart="100dp"
                android:textSize="24sp"
                android:text="200"
                android:textColor="@color/primaryText"
                android:backgroundTint="@color/button"
                android:contentDescription="Option B. 200. Double tap to select." />
        </LinearLayout>

        <!-- Second Row of Options -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="50dp"
            android:gravity="center">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/option_c"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:textSize="24sp"
                android:text="100"
                android:textColor="@color/primaryText"
                android:backgroundTint="@color/button"
                android:contentDescription="Option C. 100. Double tap to select." />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/option_d"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_marginStart="100dp"
                android:textSize="24sp"
                android:text="200"
                android:textColor="@color/primaryText"
                android:backgroundTint="@color/button"
                android:contentDescription="Option D. 200. Double tap to select." />
        </LinearLayout>

    </LinearLayout>

</FrameLayout>
