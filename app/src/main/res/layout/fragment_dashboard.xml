<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    tools:context=".ui.DashboardFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        android:padding="16dp">

        <!-- Grid Layout for 2 Columns -->
        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:columnCount="2"
            android:rowCount="4"
            android:layout_marginBottom="20dp"
            android:orientation="horizontal">

            <!-- Button 1 - Ring a Bell -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/ring_bell_cv"
                android:layout_width="0dp"
                android:layout_height="100dp"
                android:layout_margin="8dp"
                android:layout_columnWeight="1"
                app:cardCornerRadius="20dp"
                app:cardElevation="5dp"
                app:cardBackgroundColor="@color/button">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Ring a Bell"
                    android:textColor="@color/primaryText"
                    android:textSize="18sp"
                    android:layout_gravity="center"/>
            </com.google.android.material.card.MaterialCardView>

            <!-- Button 2 - Play Drums -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/tap_tabla_cv"
                android:layout_width="0dp"
                android:layout_height="100dp"
                android:layout_margin="8dp"
                android:layout_columnWeight="1"
                app:cardCornerRadius="20dp"
                app:cardElevation="5dp"
                app:cardBackgroundColor="@color/button">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Play Drums"
                    android:textColor="@color/primaryText"
                    android:textSize="18sp"
                    android:layout_gravity="center"/>
            </com.google.android.material.card.MaterialCardView>

            <!-- Button 3 - Recite Numbers -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/speak_numbers_cv"
                android:layout_width="0dp"
                android:layout_height="100dp"
                android:layout_margin="8dp"
                android:layout_columnWeight="1"
                app:cardCornerRadius="20dp"
                app:cardElevation="5dp"
                app:cardBackgroundColor="@color/button">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Recite Numbers"
                    android:textColor="@color/primaryText"
                    android:textSize="18sp"
                    android:layout_gravity="center"/>
            </com.google.android.material.card.MaterialCardView>

            <!-- Button 4 - Take a Lesson -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/tts_cv"
                android:layout_width="0dp"
                android:layout_height="100dp"
                android:layout_margin="8dp"
                android:layout_columnWeight="1"
                app:cardCornerRadius="20dp"
                app:cardElevation="5dp"
                app:cardBackgroundColor="@color/button">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Take a Lesson"
                    android:textColor="@color/primaryText"
                    android:textSize="18sp"
                    android:layout_gravity="center"/>
            </com.google.android.material.card.MaterialCardView>

            <!-- Button 5 - Multi-choice -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/mcq_cv"
                android:layout_width="0dp"
                android:layout_height="100dp"
                android:layout_margin="8dp"
                android:layout_columnWeight="1"
                app:cardCornerRadius="20dp"
                app:cardElevation="5dp"
                app:cardBackgroundColor="@color/button">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Multi-choice"
                    android:textColor="@color/primaryText"
                    android:textSize="18sp"
                    android:layout_gravity="center"/>
            </com.google.android.material.card.MaterialCardView>

            <!-- Button 6 - Single Choice -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/math_quiz_cv"
                android:layout_width="0dp"
                android:layout_height="100dp"
                android:layout_margin="8dp"
                android:layout_columnWeight="1"
                app:cardCornerRadius="20dp"
                app:cardElevation="5dp"
                app:cardBackgroundColor="@color/button">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Single Choice"
                    android:textColor="@color/primaryText"
                    android:textSize="18sp"
                    android:layout_gravity="center"/>
            </com.google.android.material.card.MaterialCardView>

            <!-- Button 7 - Number Line -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/number_line_cv"
                android:layout_width="0dp"
                android:layout_height="100dp"
                android:layout_margin="8dp"
                android:layout_columnWeight="1"
                app:cardCornerRadius="20dp"
                app:cardElevation="5dp"
                app:cardBackgroundColor="@color/button">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Number Line"
                    android:textColor="@color/primaryText"
                    android:textSize="18sp"
                    android:layout_gravity="center"/>
            </com.google.android.material.card.MaterialCardView>

        </GridLayout>

    </LinearLayout>

</FrameLayout>
